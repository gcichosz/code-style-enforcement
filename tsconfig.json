{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": ["ES2022"],

    /* Modules */
    "module": "ES2022",
    "moduleResolution": "node",

    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": ["node_modules/**/*", "tsconfig.json", ".vscode/**/*"]
}
